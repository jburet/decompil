<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="jdecomp.visualisation.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="jdecomp.visualisation.Perspective"
            id="jdecomp.visualisation.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="jdecomp.visualisation.View"
            id="jdecomp.visualisation.view">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="jdecomp.visualisation.application"
            name="JDecomp">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="jdecomp.visualisation.handlers.OpenFileChooserHandler"
            id="jdecomp.visualisation.command.OpenFileChooser"
            name="OpenFileChooser">
      </command>
      <command
            defaultHandler="jdecomp.visualisation.handlers.ExitHandler"
            id="jdecomp.visualisation.command.Exit"
            name="Exit">
      </command>
         
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="jdecomp.visualisation.command.OpenFileChooser"
                  id="OpenFileChooserMenuElement"
                  label="Open class"
                  style="push"
                  tooltip="Open a class">
            </command>
            <separator
                  name="jdecomp-visualisation.separator2">
            </separator>
            <command
                  commandId="jdecomp.visualisation.command.Exit"
                  id="exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
         <separator
               name="jdecomp-visualisation.separator1">
         </separator>
      </menuContribution>
   </extension>

</plugin>
